    <title>Campground Edit </title>
</head>
<body>
    <h1>Edit</h1>
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
        <div>
            <label for="tittle">Edit tittle</label>
            <input type="text" id = "tittle" name="campground[tittle]" value ="<%= campground.tittle  %> " >
        </div>
    
        <div>
            <label for="location">Edit location</label>
            <input type="text" id = "location" name="campground[location]" value ="<%= campground.location  %> "  >
        </div>
    
        <button>Update Campground</button>
    
    </form>

    <a href="/campgrounds/<%=campground._id%>">Back to campground</a>

</body>
</html>